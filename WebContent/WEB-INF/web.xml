<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>CinemaSite</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>MovieController</servlet-name>
    <servlet-class>controllers.MovieController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>MovieController</servlet-name>
    <url-pattern>/MovieController</url-pattern>
  </servlet-mapping> 
    <servlet>
    <servlet-name>TicketController</servlet-name>
    <servlet-class>controllers.TicketController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>TicketController</servlet-name>
    <url-pattern>/TicketController</url-pattern>
  </servlet-mapping> 
  <servlet>
    <servlet-name>ActorController</servlet-name>
    <servlet-class>controllers.ActorController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ActorController</servlet-name>
    <url-pattern>/ActorController</url-pattern>
  </servlet-mapping> 
    <servlet>
    <servlet-name>ProjectionController</servlet-name>
    <servlet-class>controllers.ProjectionController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ProjectionController</servlet-name>
    <url-pattern>/ProjectionController</url-pattern>
  </servlet-mapping> 
<jsp-config>
    <jsp-property-group>
        <url-pattern>*.jsp</url-pattern>
        <page-encoding>UTF-8</page-encoding>
    </jsp-property-group>
</jsp-config>


</web-app>
